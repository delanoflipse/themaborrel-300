@import url("https://fonts.googleapis.com/css?family=Roboto:300,400,500,700")

@import "variables"

*
	box-sizing border-box
	
html, body
	width 100%
	height 100%
	margin 0
	padding 0
	font-family "Roboto", sans-serif

body
	display block
	background-image url(/images/grass.jpg)

.container
	max-width $container-size
	margin 0px auto

.flex
	display flex

	&.vertical
		flex-direction column

	&.justify-center
		justify-content center

	&.align-center
		align-items center

	&.center-all
		justify-content center
		align-items center

	&.wrap
		flex-wrap wrap

.army-container
	position absolute
	z-index: 10
	left 0
	right 0
	bottom 0
	top 20px
	overflow hidden

.overlay
	display: flex
	justify-content: center
	align-items: flex-start
	position absolute
	z-index: 100
	left 0
	right 0
	bottom 0
	top 0
	overflow hidden

.phase
	position: absolute
	left 0
	right 0
	bottom 0
	display flex
	justify-content: center

	div
		font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
		letter-spacing: 2px
		font-size: 48px
		background rgba(0, 0, 0, 0.8)
		color white
		display flex
		height 80px;
		align-items center
		padding 0 50px;

.stats
	flex 1
	font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
	letter-spacing: 2px
	font-size: 48px
	background rgba(0, 0, 0, 0.8)
	min-width: 300px
	display flex
	height 80px;
	align-items center
	justify-content: flex-end;
	padding 0 50px 0 20px
	color white;

	.new-stat
		position: absolute;
		top: 100%;
		left 0;
		animation fadeout 5s linear;
	&.bole
		justify-content: flex-start;
		padding 0 20px 0 50px
	.def
		position relative
		color #2196f3
		margin-left 20px
	.atk
		margin-left 20px
		position relative
		color red

.fight-stat
	display: flex
	justify-content: center
	align-items: center
	position absolute
	z-index: 102
	left 0
	right 0
	bottom 0
	top 0
	div
		font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
		letter-spacing: 2px
		font-size: 48px
		background rgba(0, 0, 0, 0.8)
		color white
		padding 20px 50px;

$rot = 10deg
@keyframes wiggle {
    0% { transform: rotate(0deg); }
   25% { transform: rotate($rot); }
   50% { transform: rotate(0deg); }
   75% { transform: rotate(-1 * $rot); }
  100% { transform: rotate(0deg); }
}

@keyframes fadeout {
    0% { transform: translate(0px, 0px); opacity 1; }
    75% { transform: translate(0px, 75px); opacity 0.8; }
    100% { transform: translate(0px, 100px); opacity 0; }
}


@keyframes attack {
    0% { transform: translateX(0px); }
    10% { transform: translateX(20px) rotate(10deg); }
    15% { transform: translateX(-5px); }
    20% { transform: translateX(0); }
}

@keyframes attackinv {
    0% { transform: translateX(0px); }
    10% { transform: translateX(-20px) rotate(-10deg); }
    15% { transform: translateX(5px); }
    20% { transform: translateX(0); }
}

.soldier
	position absolute
	width: 64px
	height: 64px
	background-image url(/images/bole.png)
	background-size: contain
	background-position: center center
	background-repeat: no-repeat
	text-align: center
	margin-left: -32px
	margin-top: -32px

	&.state-walking
		animation: wiggle 0.8s linear infinite
	&.state-combat
		animation: attack 0.8s linear infinite
	&.state-combat.spartan
		animation: attackinv 0.8s linear infinite

	&.spartan
		// width: 100px
		// height: 100px
		// margin-left: -50px
		// margin-top: -50px
		background-image url(/images/spartan.png)

	&.bier
		background-image url(/images/bolebier.png)
	&.sterk
		background-image url(/images/bolesterk.png)
	&.fris
		background-image url(/images/bolefris.png)
	
	span
		position relative
		top -16px
		padding 1px 4px
		font-size 24px
		background: rgba(255, 255, 255, 0.3)

.rocks
	background-image url(/images/rocks.png)
	background-size: contain
	background-position: right center
	background-repeat: no-repeat
	position absolute
	z-index: 20
	right 0
	height calc(20vh - 50px)
	width 100%

	&.rock1
		top 0
		z-index 0

	&.rock2
		bottom 0

@font-face {
	font-family: '8bit';
	src: url('/fonts/8bit.ttf')  format('truetype');
}
