@import url("https://fonts.googleapis.com/css?family=Roboto:300,400,500,700")

@import "variables"

*
	box-sizing border-box
	
html, body
	width 100%
	height 100%
	margin 0
	padding 0
	font-family "Roboto", sans-serif

body
	display block

.container
	max-width $container-size
	margin 0px auto
	padding 20px

[v-cloak]
	display none


button, input
	padding 5px 10px
	margin-bottom: 10px

label
	display inline-block
	margin-bottom: 10px